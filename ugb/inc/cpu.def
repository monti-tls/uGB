/*****************************************/
/*** Modified Z80 register definitions ***/
/*****************************************/

#ifndef DEF_REGW
#define DEF_REGW(name, index)
#endif

#ifndef DEF_REGB
#define DEF_REGB(name, index)
#endif

#ifndef DEF_REG_MSK
#define DEF_REG_MSK(reg, name, bit)
#endif

DEF_REGW(SP, 0x0)  // Stack Pointer
DEF_REGW(PC, 0x2)  // Program Counter

DEF_REGB(IE, 0x04) // Interrupts Enable Register

DEF_REGW(AF, 0xA)  // Accumulator | Flags
DEF_REGW(BC, 0xC)  // General Purpose B | C
DEF_REGW(DE, 0xE)  // General Purpose D | E
DEF_REGW(HL, 0x10) // General Purpose H | L

DEF_REGB(A,  0xA)  // Accumulator
DEF_REGB(F,  0xB)  // Flags
DEF_REGB(B,  0xC)  // General Purpose B
DEF_REGB(C,  0xD)  // General Purpose C
DEF_REGB(D,  0xE)  // General Purpose D
DEF_REGB(E,  0xF)  // General Purpose E
DEF_REGB(H,  0x10) // General Purpose H
DEF_REGB(L,  0x11) // General Purpose L

DEF_REG_MSK(F, Z, 7) // Zero
DEF_REG_MSK(F, N, 6) // Subtract
DEF_REG_MSK(F, H, 5) // Half Carry
DEF_REG_MSK(F, C, 4) // Carry

#undef DEF_REG_MSK
#undef DEF_REGB
#undef DEF_REGW
